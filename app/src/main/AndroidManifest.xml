<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.uptown.gym.trainee">

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/MyTheme.DayNight"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".view.ongoingworkoutplans.fitnesssession.FitnessSessionWorkoutActvity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.profile.InBodyDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.profile.InBodiesActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.profile.FitnessTestDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.profile.FitnessTestsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.registeration.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.workoutplans.WorkoutPlanDetailsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.workoutplans.WorkoutPlanWeekDaysActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.workoutplans.WorkoutPlanCategoryActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ongoingworkoutplans.OngoingWorkoutPlanDetailsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ongoingworkoutplans.OnGoingWorkoutPlanDayAppointmentsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
    </application>

</manifest>